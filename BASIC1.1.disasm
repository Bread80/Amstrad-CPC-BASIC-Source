f4f2 c0        ret     nz

f4f3 1a        ld      a,(de)
f4f4 fe2d      cp      $2d				; '-'
f4f6 2805      jr      z,$f4fd          ; 
f4f8 fe2b      cp      $2b				; '+'
f4fa c0        ret     nz

