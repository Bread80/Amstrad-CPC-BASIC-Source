e7b6 2828      jr      z,$e7e0          ; (+$28)
e7b8 c5        push    bc
e7b9 d5        push    de
e7ba 210400    ld      hl,$0004         ;Add four bytes for line length and line number...
e7bd 09        add     hl,bc            ;...to raw tokenised line length
e7be e5        push    hl
e7bf e5        push    hl
e7c0 cd64e8    call    $e864
