;;=do template hash
f4ae af        xor     a
f4af 6f        ld      l,a              ;L=0. Number of chars after decimal point
f4b0 b0        or      b
f4b1 c8        ret     z

;;=template hash loop
f4b2 1a        ld      a,(de)           ;Again hashes before the decimal point, unless the first char is a decimal point
f4b3 fe2e      cp      $2e				; '.'
f4b5 280f      jr      z,$f4c6          ; (+$0f)
f4b7 fe23      cp      $23				; '#'
f4b9 2806      jr      z,$f4c1          ; (+$06)
